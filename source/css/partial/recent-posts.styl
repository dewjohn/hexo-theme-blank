#recent-posts {
    max-width: 650px;
    padding: 0px 10px;
    height: auto;
    margin: 0 auto;
}
.recent-post-item {
    background-color: #FFF;
    margin-top: 30px;
    font-size: 16px;
    line-height: 2;
}

.post-title  {
    text-align: center;
    text-decoration: none;
    color: #5f5f5f;
    font-size: 1.8em;
}
.readmore {
    text-align: center;
    margin-top: 1.618em;
    margin-bottom: 5em;
}

.post-meta {
    color: #bbbbbb;
    font-size: 80%;
    text-align: center;
    margin: 1rem 0;
}
.post-meta-item {
    margin: 0.25em;
    display: inline-block;
    color: #bbbbbb;
}
.post-meta-item a{
    color: #bbbbbb;    
}

    
